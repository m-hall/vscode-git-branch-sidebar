{
    "name": "vscode-git-branch-sidebar",
    "displayName": "vscode-git-branch-sidebar",
    "description": "Adds a branches section to the source control sidebar for git",
    "version": "1.0.1",
    "publisher": "mia-hall",
    "repository": "github:m-hall/vscode-git-branch-sidebar",
    "engines": {
        "vscode": "^1.38.0"
    },
    "categories": [
        "Other"
    ],
    "extensionDependencies": [
        "vscode.git"
    ],
    "activationEvents": [
        "onView:scm-local-branches"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "views": {
            "scm": [
                {
                    "id": "scm-local-branches",
                    "name": "Local Branches"
                }
            ]
        },
        "commands": [
            {
                "command": "scm-local-branches.refresh",
                "title": "Refresh local branch list",
                "icon": {
                    "dark": "images/dark/refresh.svg",
                    "light": "images/light/refresh.svg"
                }
            },
            {
                "command": "scm-branch.delete",
                "title": "Delete",
                "icon": {
                    "dark": "images/dark/close.svg",
                    "light": "images/light/close.svg"
                }
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "scm-local-branches.refresh",
                    "when": "view == scm-local-branches",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "scm-branch.delete",
                    "when": "view == scm-local-branches && viewItem == branch",
                    "group": "inline"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.6",
        "@types/node": "^10.12.21",
        "@types/vscode": "^1.38.0",
        "glob": "^7.1.4",
        "mocha": "^6.1.4",
        "typescript": "^3.3.1",
        "tslint": "^5.12.1",
        "vscode-test": "^1.2.0"
    }
}
